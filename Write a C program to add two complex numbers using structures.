#include <stdio.h>

// Define a structure for Complex Number
struct Complex {
    float real;
    float imag;
};

// Function to add two complex numbers
struct Complex addComplex(struct Complex c1, struct Complex c2) {
    struct Complex result;
    result.real = c1.real + c2.real; // Add real parts
    result.imag = c1.imag + c2.imag; // Add imaginary parts
    return result; // Return the result
}

int main() {
    struct Complex num1, num2, sum; // Declare complex number variables

    // Input first complex number
    printf("Enter the real part of first complex number: ");
    scanf("%f", &num1.real);
    printf("Enter the imaginary part of first complex number: ");
    scanf("%f", &num1.imag);

    // Input second complex number
    printf("Enter the real part of second complex number: ");
    scanf("%f", &num2.real);
    printf("Enter the imaginary part of second complex number: ");
    scanf("%f", &num2.imag);

    // Add the two complex numbers
    sum = addComplex(num1, num2);

   
